<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Title -->

    <!-- Main Story Container with Background -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="Liburan di Jogja"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="425dp"
        android:layout_height="553dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/highlight" />

    <TextView
        android:id="@+id/storyText"
        android:layout_width="326dp"
        android:layout_height="428dp"
        android:layout_marginTop="124dp"
        android:fontFamily="casual"
        android:lineSpacingExtra="4dp"
        android:padding="12dp"
        android:text="Disini Saya akan Menceritakan pengalaman liburan saya kemarin,disini saya saat akhir liburan saya pergi ke Jogja untuk merayakan tutup tahun bersama keluarga Dan tempat wisata yang saya kunjungi adalah Bukit Bintang karena Bukit Bintang merupakan tempat wisata yang paling dekat dengan tempat saya menginap.Di Bukit Bintang,saya merasa sangat senang karena pemandangannya yang indah saat malam dan terutama karena saya dapat menikmatinya bersama keluarga.Sekian cerita liburan saya Terima kasih"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reasonText"
        android:layout_width="382dp"
        android:layout_height="101dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="ALASAN SAYA HANYA MENCERITAKAN BUKIT BINTANG ADALAH KARENA SAYA SAAT LIBURAN HANYA DI KAMAR DAN PERGI KE BUKIT BINTANG ITU SAJA"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="58dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bck"
        android:onClick="bck"/>

</androidx.constraintlayout.widget.ConstraintLayout>
